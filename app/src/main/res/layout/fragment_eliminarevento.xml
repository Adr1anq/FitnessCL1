<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/direc_ev"
        android:layout_width="247dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="Dirección"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_ev" />

    <TextView
        android:id="@+id/nom_ev"
        android:layout_width="279dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="Nombre"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ev" />

    <Button
        android:id="@+id/btn_Eliminar"
        android:layout_width="195dp"
        android:layout_height="47dp"
        android:layout_marginTop="100dp"
        android:text="Eliminar"
        android:background="@drawable/bt_dos"
        android:textColor="@drawable/txt_btn_dos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdep_ev" />

    <TextView
        android:id="@+id/nump_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="NumParti"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toEndOf="@+id/texParti"
        app:layout_constraintTop_toBottomOf="@+id/direc_ev" />

    <TextView
        android:id="@+id/tdep_ev"
        android:layout_width="121dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="deporte"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texParti" />

    <TextView
        android:id="@+id/no_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO HAY EVENTOS"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/texParti"
        android:layout_width="142dp"
        android:layout_height="27dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:text="N° Participantes: "
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direc_ev" />

    <TextView
        android:id="@+id/txt_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Mi Evento"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>